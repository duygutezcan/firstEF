@model firstEF.Models.ProductsModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Head</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products.Id" class="control-label"></label>
                <input asp-for="Products.Id" class="form-control" />
                <span asp-validation-for="Products.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                <input asp-for="Products.ProductName" class="form-control" />
                <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Price" class="control-label"></label>
                <input type="text" value="@Model.Products.Price" name="Products.Price" class="form-control" />
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="Products.CategoryId" class="form-control" name="Products.CategoryId">
                    @foreach(var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }
                </select>
               
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.Txt" class="@Model.Cls" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
